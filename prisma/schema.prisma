datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  directusId String
  firstName  String
  lastName   String
  password   String
  shopDomain String?  // Make this field optional
  tokens     Token[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


model Token {
  id                        Int      @id @default(autoincrement())
  userId                    Int
  user                      User     @relation(fields: [userId], references: [id])
  accessToken               String
  refreshToken              String
  expiresAt                 DateTime
  sessionAccessTokenExpiresAt DateTime // New field for session access token expiration
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

